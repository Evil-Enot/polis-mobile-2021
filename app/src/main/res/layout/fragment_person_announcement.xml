<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_person_announcement__cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include"
        layout="@layout/compontn_person_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/fragment_person_announcement__ll_tags"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_chainStyle="packed"
        >

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/fragment_person_announcement__ll_iv_tag7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_line"
        app:layout_constraintBottom_toBottomOf="@id/fragment_person_announcement__ll_tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_person_announcement__ll_tags"
        />

    <ImageView
        android:id="@+id/fragment_person_announcement__iv_metro"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_person_announcement__ll_tags"  />

    <TextView
        android:id="@+id/fragment_person_announcement__tv_metro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_person_announcement__iv_metro"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/fragment_person_announcement__iv_metro"
        app:layout_constraintTop_toTopOf="@id/fragment_person_announcement__iv_metro"
        />

    <ImageView
        android:id="@+id/fragment_person_announcement__iv_branch_color"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_person_announcement__tv_metro"
        app:layout_constraintStart_toEndOf="@id/fragment_person_announcement__tv_metro"
        app:layout_constraintTop_toTopOf="@id/fragment_person_announcement__tv_metro"
        />

    <ImageView
        android:id="@+id/fragment_person_announcement__iv_money"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_person_announcement__iv_metro"
        />

    <TextView
        android:id="@+id/fragment_person_announcement__tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_person_announcement__iv_money"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/fragment_person_announcement__iv_money"
        app:layout_constraintTop_toTopOf="@id/fragment_person_announcement__iv_money"
        />

    <LinearLayout
        android:id="@+id/fragment_person_announcement__ll_rooms"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="228dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_person_announcement__iv_money"
        app:layout_constraintVertical_chainStyle="packed"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_person_announcement__ll_cv_rooms1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:outlineSpotShadowColor="@color/black"
            android:visibility="invisible"
            app:cardCornerRadius="6dp"
            >

            <TextView
                android:id="@+id/fragment_person_announcement__ll_tv_rooms1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_person_announcement__ll_cv_rooms2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:outlineSpotShadowColor="@color/black"
            android:visibility="invisible"
            app:cardCornerRadius="6dp">

            <TextView
                android:id="@+id/fragment_person_announcement__ll_tv_rooms2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                 />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_person_announcement__ll_cv_rooms3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:outlineSpotShadowColor="@color/black"
            android:visibility="invisible"
            app:cardCornerRadius="6dp">

            <TextView
                android:id="@+id/fragment_person_announcement__ll_tv_rooms3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/fragment_person_announcement__tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="220dp"
        android:padding="10dp"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_person_announcement__ll_rooms"
        />

    <Button
        android:id="@+id/fragment_person_announcement__button_show_number"
        style="@style/App.Choose.Yourself.Button"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_marginVertical="15dp"
        android:text="@string/offer_an_apartment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>