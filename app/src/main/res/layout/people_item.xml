<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="1dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/people_item_iv_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/people_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/people_item_tv_age"
                app:layout_constraintStart_toEndOf="@+id/people_item_iv_photo"
                app:layout_constraintTop_toTopOf="@id/people_item_iv_photo"
                app:layout_constraintVertical_chainStyle="packed"
                />

            <TextView
                android:id="@+id/people_item_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/people_item_iv_photo"
                app:layout_constraintStart_toStartOf="@id/people_item_tv_name"
                app:layout_constraintTop_toBottomOf="@id/people_item_tv_name"
                />

             <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_line"
                app:layout_constraintBottom_toTopOf="@id/people_item_ll_tags"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/people_item_ll_tags"
                />

            <LinearLayout
                android:id="@+id/people_item_ll_tags"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:padding="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_iv_photo"
                app:layout_constraintVertical_chainStyle="packed"
                android:paddingStart="10dp"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/people_item_ll_iv_tag1"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag2"
                    android:layout_marginEnd="5dp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag3"
                    android:layout_marginEnd="5dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag4"
                    android:layout_marginEnd="5dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag5"
                    android:layout_marginEnd="5dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag6"
                    android:layout_marginEnd="5dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/people_item_ll_iv_tag7"
                    android:layout_marginEnd="5dp"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_line"
                app:layout_constraintBottom_toBottomOf="@id/people_item_ll_tags"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_ll_tags"

                />

            <ImageView
                android:id="@+id/people_item_iv_metro"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_ll_tags"
                />

            <TextView
                android:id="@+id/people_item_tv_metro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/people_item_iv_metro"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/people_item_iv_metro"
                app:layout_constraintTop_toTopOf="@id/people_item_iv_metro"
                />

            <ImageView
                android:id="@+id/people_item_iv_branch_color"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginVertical="20dp"
                app:layout_constraintBottom_toBottomOf="@id/people_item_tv_metro"
                app:layout_constraintStart_toEndOf="@id/people_item_tv_metro"
                app:layout_constraintTop_toTopOf="@id/people_item_tv_metro"
                />

            <ImageView
                android:id="@+id/people_item_iv_money"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_iv_metro"
                />

            <TextView
                android:id="@+id/people_item_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/people_item_iv_money"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/people_item_iv_money"
                app:layout_constraintTop_toTopOf="@id/people_item_iv_money"
                />

            <LinearLayout
                android:id="@+id/people_item_ll_rooms"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_iv_money"
                app:layout_constraintVertical_chainStyle="packed"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/people_item_ll_cv_rooms1"
                    android:visibility="invisible"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    android:outlineSpotShadowColor="@color/black"
                    >
                    <TextView
                        android:id="@+id/people_item_ll_tv_rooms1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/people_item_ll_cv_rooms2"
                    android:visibility="invisible"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    android:outlineSpotShadowColor="@color/black"
                    >
                    <TextView
                        android:id="@+id/people_item_ll_tv_rooms2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/people_item_ll_cv_rooms3"
                    android:visibility="invisible"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    android:outlineSpotShadowColor="@color/black"
                    >
                    <TextView
                        android:id="@+id/people_item_ll_tv_rooms3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        />
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <TextView
                android:id="@+id/people_item_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:padding="10dp"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/people_item_ll_rooms"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>