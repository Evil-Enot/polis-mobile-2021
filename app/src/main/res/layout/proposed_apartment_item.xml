<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_card_shadow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/userHeader"
        layout="@layout/person_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/proposed_apartment_item_metro"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userHeader">

        <ImageView
            style="@style/icon"
            android:id="@+id/proposed_apartment_item_metro__icon"
            android:src="@drawable/ic_train"/>

        <TextView
            android:id="@+id/proposed_apartment_item_metro__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAlignment="center"
            android:text="Купчино" />

        <ImageView
            android:id="@+id/proposed_apartment_item_metro__branch_color"
            style="@style/metroCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/metro_circle"
            android:contentDescription="branch color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proposed_apartment_item_cost"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proposed_apartment_item_metro">

        <ImageView
            style="@style/icon"
            android:id="@+id/proposed_apartment_item_cost__icon"
            android:src="@drawable/ic_wallet"/>

        <TextView
            android:id="@+id/proposed_apartment_item_cost__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:text="24449" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proposed_apartment_item_square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proposed_apartment_item_cost">

        <ImageView
            android:id="@+id/proposed_apartment_item_square__icon"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_squared_m" />

        <TextView
            android:id="@+id/proposed_apartment_item_square__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="50 кв.м"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proposed_apartment_item_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proposed_apartment_item_square">

        <ImageView
            android:id="@+id/proposed_apartment_item_photos__icon"
            style="@style/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img" />

        <TextView
            android:id="@+id/proposed_apartment_item_photos__text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Фотографии:"
            android:textStyle="bold"

            android:textAlignment="center" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/proposed_apartment_item_photos__photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proposed_apartment_item_photos">

        <ImageView
            android:id="@+id/photo1"
            style="@style/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/unnamed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/photo2"
            style="@style/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/unnamed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/photo3"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toEndOf="@+id/photo1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/photo3"
            style="@style/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="60dp"
            android:src="@drawable/unnamed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.chip.Chip
        app:layout_constraintLeft_toRightOf="@id/proposed_apartment_item_metro"
        app:layout_constraintTop_toBottomOf="@id/userHeader"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        android:id="@+id/chip4"
        android:layout_width="112dp"
        android:layout_height="44dp"
        android:text="2 комнаты"
        style="@style/Widget.MaterialComponents.Chip.Choice" />
</androidx.constraintlayout.widget.ConstraintLayout>