<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/people_item_iv_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:src="@drawable/avatar_stub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/people_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/people_item_tv_age"
        app:layout_constraintStart_toEndOf="@+id/people_item_iv_photo"
        app:layout_constraintTop_toTopOf="@id/people_item_iv_photo"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Илья Сачук" />

    <TextView
        android:id="@+id/people_item_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/people_item_iv_photo"
        app:layout_constraintStart_toStartOf="@id/people_item_tv_name"
        app:layout_constraintTop_toBottomOf="@id/people_item_tv_name"
        tools:text="200 лет" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/people_item_iv_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>